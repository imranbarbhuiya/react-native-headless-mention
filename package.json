{
	"name": "react-native-headless-mention",
	"version": "1.2.4",
	"description": "A headless react native mention component for both iOS and Android.",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		"types": "./dist/index.d.ts",
		"import": "./dist/index.mjs",
		"require": "./dist/index.js"
	},
	"sideEffects": false,
	"license": "MIT",
	"author": "@imranbarbhuiya",
	"scripts": {
		"docs": "typedoc",
		"lint": "eslint src tests --fix --cache",
		"format": "biome check --write .",
		"test": "vitest run",
		"test:watch": "vitest",
		"update": "yarn upgrade-interactive",
		"build": "tsup",
		"typecheck": "tsc -p tsconfig.eslint.json",
		"bump": "cliff-jumper",
		"check-update": "cliff-jumper --dry-run",
		"prepack": "yarn build && pinst --disable",
		"postinstall": "husky .github/husky",
		"postpack": "pinst --enable"
	},
	"keywords": [
		"react native",
		"expo",
		"mention",
		"headless",
		"headless ui",
		"hashtag",
		"tag"
	],
	"dependencies": {
		"diff": "8.0.2"
	},
	"peerDependencies": {
		"react": "^18.0.0 || ^19.0.0",
		"react-native": "*"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@favware/cliff-jumper": "^6.0.0",
		"@favware/npm-deprecate": "^2.0.0",
		"@types/node": "^22.15.30",
		"@types/react": "^19.1.6",
		"@vitest/coverage-v8": "^3.2.2",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^9.28.0",
		"eslint-config-mahir": "^1.0.7",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.0",
		"pinst": "^3.0.0",
		"react": "^19.1.0",
		"react-native": "^0.79.3",
		"tsup": "^8.5.0",
		"typedoc": "^0.28.5",
		"typescript": "^5.8.3",
		"vitest": "^3.2.2"
	},
	"files": [
		"dist/**/*.js*",
		"dist/**/*.mjs*",
		"dist/**/*.d*"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/imranbarbhuiya/react-native-headless-mention.git"
	},
	"bugs": {
		"url": "https://github.com/imranbarbhuiya/react-native-headless-mention/issues"
	},
	"homepage": "https://github.com/imranbarbhuiya/react-native-headless-mention#readme",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"packageManager": "yarn@4.9.2"
}
